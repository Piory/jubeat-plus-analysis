<div class="row padding-top">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">
        <span class="card-title center-align"><h2>Log in</h2></span>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
              <div class="col s10 offset-s1 input-field">
                <%= material_icon.email.css_class('prefix') %>
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, class: 'validate' %>
              </div>
            </div>

            <div class="row">
              <div class="col s10 offset-s1 input-field">
                <%= material_icon.vpn_key.css_class('prefix') %>
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: 'off', class: 'validate' %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="row">
                  <div class="col s10 offset-s1">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                </div>
            <% end -%>

            <div class="row">
              <div class="col s10 offset-s1 center">
                <%= f.button 'Log in', class: 'btn waves-effect waves-light' do %>
                  Log in<%= icon('sign-in', class: 'right') %>
                <% end %>
              </div>
            </div>
        <% end %>

        <div class="row">
          <div class="col s10 offset-s1 center">
            <%= render 'devise/shared/links' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

