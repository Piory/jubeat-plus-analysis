<%- if controller_name != 'sessions' %>
    <div class="row">
      <div class="col s12">
        <%= link_to new_session_path(resource_name), class: 'btn waves-effect waves-light' do %>
        Log in<%= icon('sign-in', class: 'right') %>
        <% end %>
      </div>
    </div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="row">
      <div class="col s12">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    </div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="row">
      <div class="col s12">
        <%= link_to new_registration_path(resource_name), class: 'btn waves-effect waves-light' do %>
          Sign in<%= icon('user-plus', class: 'right') %>
        <% end %>
      </div>
    </div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="row">
      <div class="col s12">
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'btn waves-effect waves-light' %>
      </div>
    </div>
<% end -%>

<%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
        <div class="row">
          <div class="col s12">
            <% if provider == 'google_oauth2' %>
                <% icon = 'google' %>
            <% end %>
            <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn waves-effect waves-light' do %>
                <%= icon('google', class: 'left') %>Sign in with <%= OmniAuth::Utils.camelize(provider) %>
            <% end %>
          </div>
        </div>
    <% end -%>
<% end -%>
