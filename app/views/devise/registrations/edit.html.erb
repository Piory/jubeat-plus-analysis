<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col s12 input-field">
        <%= material_icon.email.css_class('prefix') %>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="row">
      <div class="col s12 input-field">
        <%= material_icon.vpn_key.css_class('prefix') %>
        <%= f.label :password do %>
            Password (leave blank if you don't want to change it)
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
            <br/>
            <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col s12 input-field">
        <%= material_icon.vpn_key.css_class('prefix') %>
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="col s12 input-field">
        <%= material_icon.vpn_key.css_class('prefix') %>
        <%= f.label :current_password do %>
            Password (we need your current password to confirm your changes)
        <% end %>
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <%= f.button class: 'btn waves-effect waves-light', type: 'submit' do %>
            Update<%= material_icon.update.css_class('right') %>
        <% end %>
      </div>
    </div>
<% end %>

<div class="row">
  <div class="col s12">
    <h3>Delete my account</h3>
  </div>
</div>

<div class="row">
  <div class="col s12">
    delete my account?
  </div>
  <div class="col s12">
    <%= button_to registration_path(resource_name), class: 'btn waves-effect waves-light', data: { confirm: "Are you sure?" }, method: :delete do %>
        Delete my account<%= material_icon.delete.css_class('right') %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <%= link_to :back, class: 'btn waves-effect waves-light' do %>
        Back<%= material_icon.arrow_back.css_class('left') %>
    <% end %>
  </div>
</div>
