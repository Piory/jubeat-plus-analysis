<div class="row padding-top">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">
        <span class="card-title center-align"><h2>Sign up</h2></span>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="row">
              <div class="col s10 offset-s1 input-field">
                <%= material_icon.email.css_class('prefix') %>
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, class: 'validate' %>
              </div>
            </div>

            <div class="row">
              <div class="col s10 offset-s1 input-field">
                <%= material_icon.vpn_key.css_class('prefix') %>
                <%= f.label :password do %>
                    <% if @minimum_password_length %>
                        Password (<%= @minimum_password_length %> characters minimum)
                    <% end %>
                <% end %>
                <%= f.password_field :password, autocomplete: "off", class: 'validate' %>
              </div>
            </div>

            <div class="row">
              <div class="col s10 offset-s1 input-field">
                <%= material_icon.vpn_key.css_class('prefix') %>
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>
            </div>

            <div class="row">
              <div class="col s12 center">
                <%= f.button class: 'btn waves-effect waves-light', type: 'submit' do %>
                  Sign up<%= icon('user-plus', class: 'right') %>
                <% end %>
              </div>
            </div>
        <% end %>

        <div class="row">
          <div class="col s12 center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>